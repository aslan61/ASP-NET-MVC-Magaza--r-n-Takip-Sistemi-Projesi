@model MVCMağazaÜrünTakipSistemi.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "Yenikargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Kargo Bilgisi Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TakipKodu)
    <input type="text" value="@ViewBag.takipkod" class="form-control" readonly name="TakipKodu" />
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Alici)
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    <input class="form-control" type="date" name="Tarih" />
    <br />
    @Html.LabelFor(x => x.Açiklama)
    @Html.TextAreaFor(x => x.Açiklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" id="btn1">Kaydet</button>
</form>
