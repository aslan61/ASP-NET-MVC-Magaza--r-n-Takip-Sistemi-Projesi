@model MVCMağazaÜrünTakipSistemi.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>MVC Mağaza Ürün Takip Sistemi Cari Bilgi Paneli</h2>
@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{
<table class="table table-hover">
    <tr><td><label>Mail Adresi: @HttpContext.Current.User.Identity.Name</label></td></tr>
    <tr><td><label>Mail Adresi: @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</label></td></tr>
    <tr><td><label>Mail Adresi: @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</label></td></tr>
    <tr><td><label>Mail Adresi: @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</label></td></tr>
    <tr><td><label>Mail Adresi: @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</label></td></tr>
</table>
    <button class="btn btn-warning">Bilgilerimi Güncelle</button>
}
